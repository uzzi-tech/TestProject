<div class="container d-flex flex-column justify-content-center align-items-center mt-5">
  <h1 class="mb-4">Projects</h1>
  
  <%= link_to "Create New Project", new_project_path, class: "btn btn-success mb-5" %>

  <ul class="w-50">
    <% @projects.each do |project| %>
      <li class="d-flex justify-content-between align-items-center mb-3">
        <%= link_to project.name, project_path(project), class: "text-decoration-none text-dark" %>
        <div class="d-flex gap-3">
          <%= link_to "Edit", edit_project_path(project), class: "btn btn-warning btn-sm" %>
          <%= button_to "Delete", project_path(project), method: :delete, class: "btn btn-danger btn-sm" %>
        </div>
      </li>
    <% end %>
  </ul>
</div>
