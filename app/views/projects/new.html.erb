<h1>New Project</h1>

<%= form_with model: @project, url: projects_path, method: :post do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
  
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>

  <p>
    <%= form.label :qa_users, "Assign QA(s)" %><br>
    <%= form.collection_select :qa_ids, User.where(user_type: :qa), :id, :name, {}, multiple: true %>
  </p>

  <p>
    <%= form.label :developer_users, "Assign Developer(s)" %><br>
    <%= form.collection_select :developer_ids, User.where(user_type: :developer), :id, :name, {}, multiple: true %>
  </p>

  <p>
    <%= form.submit "Create Project" %>
  </p>
<% end %>
