<h1><%= @project.name %></h1>
<p><%= @project.description %></p>

<h2>Assigned Developers</h2>
<ul>
  <% @project.users.where(user_type: 'developer').each do |developer| %>
    <li><%= developer.name %> (<%= developer.email %>)</li>
  <% end %>
</ul>

<h2>Assigned QA</h2>
<ul>
  <% @project.users.where(user_type: 'qa').each do |qa| %>
    <li><%= qa.name %> (<%= qa.email %>)</li>
  <% end %>
</ul>

<%= link_to "Bugs", project_bugs_path(@project) %>  
<br>
<%= link_to "Back to Projects", projects_path %>
