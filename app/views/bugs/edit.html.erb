<h1>Edit Bug: <%= @bug.title %></h1>

<%= form_with model: [@project, @bug], local: true, html: { multipart: true } do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title, disabled: !current_user.manager? && !current_user.qa? %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description, disabled: !current_user.manager? && !current_user.qa? %>
  </div>

  <div>
  <%= f.label :deadline, "Deadline" %>
  <%= f.date_field :deadline, required: true, disabled: !current_user.manager? && !current_user.qa? %>
</div>


  <div>
  <%= f.label :bug_type %>
  <%= f.select :bug_type, Bug.bug_types.keys, 
        { selected: @bug.bug_type }, 
        { id: "bug_type_select", disabled: !current_user.manager? && !current_user.qa? } %>
  </div>

  <div>
  <%= f.label :status %>
  <%= f.select :status, 
        (@bug.feature_request? ? Bug::FEATURE_STATUSES.to_a : Bug::BUG_STATUSES.to_a), 
        { selected: @bug.status }, 
        { id: "status_select" } %>
</div>


  <div>
    <%= f.label :developer_id, "Assign to Developer" %>
    <%= f.collection_select :developer_id, User.all, :id, :name, { include_blank: "Unassigned" }, { disabled: !current_user.manager? && !current_user.qa?} %>
  </div>

  <div>
    <%= f.label :screenshot %>
    <%= f.file_field :screenshot, disabled: !current_user.manager? && !current_user.qa? %>
    
    <% if @bug.screenshot.present? %>
      <br>
      <%= image_tag @bug.screenshot.url, alt: "Bug Screenshot", width: "300" %>
    <% end %>
  </div>

  <div>
    <%= f.submit "Update Bug" %>
  </div>
<% end %>

<%= link_to "Back", project_bug_path(@project, @bug) %>


<script>
document.addEventListener("turbo:load", function () {
  const bugTypeSelect = document.getElementById("bug_type_select");
  const statusSelect = document.getElementById("status_select");

  if (!bugTypeSelect || !statusSelect) return;

  const featureStatuses = <%= Bug::FEATURE_STATUSES.to_json.html_safe %>;
  const bugStatuses = <%= Bug::BUG_STATUSES.to_json.html_safe %>;
  
  function updateStatusOptions() {
    statusSelect.innerHTML = "";

    const selectedType = bugTypeSelect.value;
    const statuses = selectedType === "feature_request" ? featureStatuses : bugStatuses;

    statuses.forEach(([label, value]) => {
      const option = document.createElement("option");
      option.value = value; 
      option.textContent = label;
      statusSelect.appendChild(option);
    });
  }
  
  bugTypeSelect.addEventListener("change", updateStatusOptions);

});
</script>
